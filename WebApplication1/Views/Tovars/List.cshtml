    <h2>МАГАЗИН САМОРЕЗОВ</h2>
    <h3>@Model.currCategory</h3>
    @{
        foreach (var tovar in Model.AllTovars)
        {
            <div class="col-md-6">
                <div class="card mb-4" data-id="">
                    <img class="product-img" src="img/${item.imgSrc}" alt="">
                    <div class="card-body text-center">
                        <h4 class="item-title">@tovar.name</h4>
                        <p><small data-items-in-box class="text-muted">@tovar.count шт</small></p>
                        <div class="details-wrapper">
                            <div class="items counter-wrapper">
                                <div class="items__control" data-action="minus">-</div>
                                <div class="items__current" data-counter>1</div>
                                <div class="items__control" data-action="plus">+</div>
                            </div>
                            <div class="price__currency">@tovar.price.ToString("c")</div>
                        </div>
                        <button data-cart type="button" class="btn btn-block btn-outline-warning">+ в корзину</button>
                    </div>
                </div>
            </div>
        }
    }
