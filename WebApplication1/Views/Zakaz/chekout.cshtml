@model Zakaz

<div claa="row">
	<h3>Оформление заказа</h3>
	<form asp-action="chekout" method="post" class="form-izontal">
		<div class="form-group">
			<label asp-for="name"></label>
			<div class="col-md-5">
				<input asp-for="name" class="form-controller" />
				<span asp-validation-for="name" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="adress"></label>
			<div class="col-md-5">
				<input asp-for="adress" class="form-controller" />
				<span asp-validation-for="adress" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="phone"></label>
			<div class="col-md-5">
				<input asp-for="phone" class="form-controller" />
				<span asp-validation-for="phone" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="email"></label>
			<div class="col-md-5">
				<input asp-for="email" class="form-controller" />
				<span asp-validation-for="email" class="text-danger"></span>
			</div>
		</div>
		<input class="btn btn-success" type="submit" value="Оплатить заказ" />
	</form>
</div>