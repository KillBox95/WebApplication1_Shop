@model WebApplication1.Data.Models.Tovar

<div class="col-md-6">
    <div class="card mb-4" data-id="">
        <img class="product-img" src="@Model.img" alt="">
        <div class="card-body text-center">
            <h4 class="item-title">@Model.name</h4>
            <p><small data-items-in-box class="text-muted">@Model.count шт</small></p>
            <div class="details-wrapper">
                <div class="items counter-wrapper">
                    <div class="items__control" data-action="minus">-</div>
                    <div class="items__current" data-counter>1</div>
                    <div class="items__control" data-action="plus">+</div>
                </div>
                <div class="price__currency">@Model.price.ToString("c")</div>
            </div>
            <button data-cart type="button" class="btn btn-block btn-outline-warning">+ в корзину</button>
        </div>
    </div>
</div>